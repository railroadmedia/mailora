{
  "name": "railroad/mailora",
  "type": "library",
  "description": "Wrapper for Laravel's email functionality that adds HTTP API and front-end-dev-friendly view-creation and use.",
  "keywords": [
    "email",
    "mail",
    "laravel",
    "api",
    "wrapper"
  ],
  "homepage": "https://github.com/railroad/mailora",
  "license": "GPL-3.0-or-later",
  "prefer-stable": true,
  "require": {
    "php": "~7",
    "laravel/framework": "5.6.*",
    "guzzlehttp/guzzle": "~6.0",
    "doctrine/dbal": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "phpunit/php-code-coverage": "~6.0",
    "orchestra/database": "~3.6",
    "orchestra/testbench": "~3.5"
  },
  "autoload": {
    "psr-4": {
      "Railroad\\Mailora\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Railroad\\Mailora\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Railroad\\Mailora\\Providers\\MailoraServiceProvider"
      ]
    }
  }
}